# Maintainer: Bardia Moshiri <fakeshell@bardia.tech>

pkgname=hybris-gsi-10.0
pkgver=0.1
pkgrel=0
pkgdesc="GSI for Android 10 under libhybris"
arch="aarch64"
url="https://halium.org/"
license="custom"
options="!check !strip !tracedeps"
makedepends="wget tar"
depends="lxc"
provides="hybris-gsi"
builddir="$srcdir/"

package() {
	LATEST=$(wget -q -O - https://ci.ubports.com/job/UBportsCommunityPortsJenkinsCI/job/ubports%252Fporting%252Fcommunity-ports%252Fjenkins-ci%252Fgeneric_arm64/job/halium-10.0/api/json | awk -F 'org.jenkinsci.plugins.workflow.job.WorkflowRun' '{print $2}' | cut -d '"' -f7)
	wget $LATEST/artifact/halium_halium_arm64.tar.xz

	tar -xf halium_halium_arm64.tar.xz

	mkdir -p ${pkgdir}/var/lib/lxc/android/

	install -m644 "$srcdir"/system/var/lib/lxc/android/android-rootfs.img "$pkgdir"/var/lib/lxc/android/android-rootfs.img
}
