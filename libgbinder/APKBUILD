pkgname=libgbinder
pkgver=1.3.33
pkgrel=0
pkgdesc="Android Binder client library"
url="https://github.com/mer-hybris/libgbinder"
arch="armhf armv7 aarch64"
license="BSD-3-Clause"
makedepends="libgrilio-dev linux-headers"
subpackages="$pkgname-dev"
_commit=b032e151a2544abb9e4e1004bb8c8bc7e55e766c
source="
	$pkgname-$pkgver.tar.gz::https://github.com/mer-hybris/libgbinder/archive/$_commit.tar.gz"
options="!check"
builddir="$srcdir"/$pkgname-$_commit

build() {
	make KEEP_SYMBOLS=1 release pkgconfig
}

package() {
	make DESTDIR="$pkgdir" install-dev
}
